{
  "name": "@ts-io/core",
  "private": true,
  "version": "0.0.1",
  "type": "module",
  "files": [
    "dist"
  ],
  "types": "./dist/core.d.ts",
  "main": "./dist/core.cjs",
  "module": "./dist/core.js",
  "exports": {
    ".": {
      "import": "./dist/core.js",
      "require": "./dist/core.cjs"
    }
  },
  "scripts": {
    "build": "tsup",
    "dev": "npm run build -- --watch",
    "check:types": "tsc --noemit",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "npm run lint -- --fix",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "devDependencies": {
    "@ts-io/eslint-config": "workspace:*",
    "@ts-io/typescript-config": "workspace:*",
    "tsup": "^8.0.1",
    "typescript": "5.2.2",
    "vitest": "^1.3.1"
  },
  "peerDependencies": {
    "socket.io": "^4.7.2",
    "socket.io-client": "^4.7.2",
    "zod": "^3.22.4"
  }
}
